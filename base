echo "<!DOCTYPE html>
<html lang='it'>
<head>
  <meta charset='UTF-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title>Agenda Virtuale</title>
  <link rel='stylesheet' href='style.css'>
  <link rel='manifest' href='manifest.json'>
  <meta name='theme-color' content='#2c3e50'>
  <script defer src='script.js'></script>
</head>
<body>
  <h1>Agenda Virtuale</h1>
  <form id='agendaForm'>
    <label>Attività: <input type='text' id='attività' required></label>
    <label>Referente attività: <input type='text' id='referente' required></label>
    <label>Programmata per: <input type='datetime-local' id='dataOra' required></label>
    <label>Note: <textarea id='note'></textarea></label>
    <label>Documenti: <input type='file' id='documento'></label>
    <button type='submit'>Aggiungi Attività</button>
  </form>
  <div id='listaAttività'></div>
  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('service-worker.js')
        .then(reg => console.log('Service Worker registrato!', reg))
        .catch(err => console.error('Service Worker fallito', err));
    }
  </script>
</body>
</html>" > index.html
